<module>
    <immask>
        wrappername = generic.py
        wrapperloop = ccdnum
        modnamepat=${modnamepat_ccdnumband}
        <file>
            <red_starflat>
                filetype = red_mkbleedmask
                filepat = ccdnum_band
                flabel = starflat    
                fsuffix = fits
                dirpat = se
                ops_enddir = red/starflat
                rundir = red/starflat
            </red_starflat>
     	    <red_bkg>
                filetype = red_bkg
                filepat = ccdnum_band
                flabel = bkg
                fsuffix = fits
                dirpat = se
                ops_enddir = bkg
                rundir = bkg
            </red_bkg>
            <red_immasked>
                filetype = red_immask
                filepat = ccdnum_band
                flabel = immasked
                fsuffix = fits
                dirpat = se
                ops_enddir = red/immask
                rundir = red/immask
                savefiles = true
            </red_immasked>
	    <red_streaks>
                filetype = red_streaks
		filename = D${expnum:8}_${band}_c${ccdnum:2}_r${reqnum}p${attnum:2}_streaks.fits
                filepat = ccdnum_band
                dirpat = se
                ops_enddir = aux
                optional = true
                rundir = red
            </red_streaks>
        </file>

        <exec_1>
            execname = immask
     	    cmd_hyphen = alldouble
            used = file.red_starflat,file.red_bkg
            was_generated_by = file.red_immasked,file.red_streaks
            ancestry = file.red_starflat:file.red_immasked, file.red_bkg:file.red_immasked, file.red_starflat:file.red_streaks
            <cmdline>
                _01_immask_mode = all
                _02_red_starflat = ${file.red_starflat.fullname}
    		    _03_red_immasked = ${file.red_immasked.fullname}
	    	    streaksfile = ${file.red_streaks.fullname}
		        write_streaks = _flag
    		    bkgfile = ${file.red_bkg.fullname}
    	    	minSigma = 6.0
    		    nsig_mask = 12
	    	    nsig_merge = 12
                nsig_sky = 1.5
		        max_angle = 75
                max_width = 300
	        	nsig_detect = 18
                min_fill = 0.33
                min_ND = 600
                nGrowCR = 1
            </cmdline>
        </exec_1>
    </immask>
</module>
