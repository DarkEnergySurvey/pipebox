<module>
    <update-scamp-headers>
        wrappername = scampHeadUpdate.py
        wrapperloop = ccdnum
        modnamepat=${modnamepat_ccdnumband}
    
        <file>
            <scamp_cat>
                filetype = cat_scamp
                filepat = ccdnum_band
                flabel = scampcat
                fsuffix = fits
                dirpat = se
                ops_enddir = cat
                rundir = cat
             </scamp_cat>
            <red_pixcor>
                filetype = red_pixcor
                filepat = ccdnum_band
                flabel = pixcor
                fsuffix = fits
                dirpat = se
                ops_enddir = red/pixcor
                rundir = red/pixcor
            </red_pixcor>
            <scamp_head>
                filetype = head_scamp
                filepat = ccdnum_band
                flabel = scamp
                fsuffix = head
                dirpat = se
                ops_enddir = aux
                rundir = aux
            </scamp_head>
            <red_wcs>
                filetype = red_wcs
                filepat = ccdnum_band
                flabel = wcs
                fsuffix = fits
                dirpat = se
                ops_enddir = red/wcs
                rundir = red/wcs
                savefiles = false
            </red_wcs>
            <scamp_update_head>
                filetype = config
                filename = ${scampupdateheadfile}
                dirpat = se
                ops_enddir = config/scamp
                rundir = config 
            </scamp_update_head>
        </file>
        <exec_1>
            execname = fwhm()
            used = file.scamp_cat
            <cmdline>
            _01_scamp_cat = filespecs.scamp_cat.fullname
            </cmdline>
        </exec_1>
    
        <exec_2>
            execname = scampUpdateHead()
            used = file.red_pixcor,file.scamp_head,file.scamp_update_head
            was_generated_by = file.red_wcs
            ancestry = file.red_pixcor:file.red_wcs,file.scamp_head:file.red_wcs
            <cmdline>
                _01_red_detrend = filespecs.red_pixcor.fullname
                _02_red_wcs = filespecs.red_wcs.fullname
                _03_scamp_head = filespecs.scamp_head.fullname
                _04_head_update = filespecs.scamp_update_head.fullname
            </cmdline>
        </exec_2>
     </update-scamp-headers>
</module>
