<module>
    <row-interp-immask>
        wrappername = generic.py
        wrapperloop = ccdnum,band
        modnamepat = ${modnamepat_ccdnumband}
        <file>
            <red_immasked>
                filetype = red_immask
                filepat = ccdnum_band
                flabel = immasked
                fsuffix = fits
                dirpat = se
                rundir = red/immask
            </red_immasked>
            <red_rowinterp_immask>
                # what metadata to get
                filetype = red_immask_rowinterp

                # how to name the file
                filepat = ccdnum_band
                flabel = rowinterp-immask
                fsuffix = fits

                # where to put the file
                dirpat = se
                ops_enddir = red/immask
                rundir = red/immask

                # whether to bring file home
                savefiles = false
            </red_rowinterp_immask>
        </file>
        <exec_1>
            execname = row_interp
            used = file.red_immasked
            was_generated_by = file.red_rowinterp_immask
            ancestry = file.red_immasked:file.red_rowinterp_immask
            cmd_hyphen = mixed_gnu
            <cmdline>
                i = ${file.red_immasked.fullname}
                o = ${file.red_rowinterp_immask.fullname}
                interp_mask = TRAIL
                invalid_mask = EDGE
                max_cols = 50
                v = _flag
            </cmdline>
        </exec_1>
    </row-interp-immask>
</module>
